<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndividualDetailFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/individual_friends_list"
            android:layout_width="match_parent"
            android:layout_height="108dp">

        </androidx.recyclerview.widget.RecyclerView>
        <Button
            android:id="@+id/button_add_friends_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />
        <TextView
            android:id="@+id/textView_individualdetails_name"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:fontFamily="casual"
            android:text="티끌모아 유럽"
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="목표금액"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/textView_individualdetails_targetamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50000"
                android:layout_marginLeft="60dp"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="원"
                android:layout_marginLeft="40dp"
                android:textSize="25dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="목표금액까지 40% 남았습니다."
            android:textSize="20dp"
            android:paddingLeft="70dp"/>

        <TextView
            android:id="@+id/textView_individualdetails_progressRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/textView_individualdetails_progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="모임 계주 :             "
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/textView_individualdetails_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="김계주"
                android:textSize="20dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="은행 이름 :             "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView_individualdetails_bankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_gravity="end"
            android:text="좋은은행" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계좌 번호 :             "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_individualdetails_accountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_gravity="end"
                android:text="1234" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="이번달 입금기한 : " />

        <TextView
            android:id="@+id/textView_individualdetails_paymentday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_gravity="end"
            android:text="5일" />
    </LinearLayout>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="입금한 사람 리스트"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textView_result_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="invisible"/>
    </LinearLayout>
</FrameLayout>