<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".createGroup.Create_AccountActivity">

    <RelativeLayout
        android:id="@+id/rl_Header1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="35dp">

        <TextView
            android:id="@+id/txtHeader1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STEP 1"
            android:textSize="40dp"/>

        <TextView
            android:id="@+id/txt1Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="입금 계좌 등록"
            android:textSize="30dp"
            android:paddingTop="10dp"
            android:layout_below="@+id/txtHeader1"/>

        <TextView
            android:id="@+id/txt1Bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="은행 선택"
            android:textSize="28dp"
            android:textStyle="bold"
            android:paddingTop="50dp"
            android:layout_below="@id/txt1Detail"/>


        <Spinner
            android:id="@+id/sp_bank"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="20dp"
            android:layout_below="@+id/txt1Bank" />

        <TextView
            android:id="@+id/txt1PaymentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입금 날짜를 선택하세요."
            android:textSize="28dp"
            android:textStyle="bold"
            android:paddingTop="50dp"
            android:layout_below="@id/sp_bank"/>


        <Spinner
            android:id="@+id/sp_paymentDate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="20dp"
            android:layout_below="@+id/txt1PaymentDate" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/btnGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp">

        <Button
            android:id="@+id/btn1Prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Prev" />

        <Button
            android:id="@+id/btn1Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_toEndOf="@id/btn3Prev"
            android:text="Next" />

    </LinearLayout>

</LinearLayout>