<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".createGroup.CreateFriendsActivity">

    <RelativeLayout
        android:id="@+id/rl_Header1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="35dp">

        <TextView
            android:id="@+id/txtHeader4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STEP 4"
            android:textSize="40dp"/>

        <TextView
            android:id="@+id/txt1Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="모임원 초대"
            android:textSize="30dp"
            android:paddingTop="10dp"
            android:layout_below="@+id/txtHeader4"/>

        <TextView
            android:id="@+id/txt1Bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모임에 초대할 친구를 추가하세요."
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingTop="50dp"
            android:layout_below="@id/txt1Detail"/>

        <Spinner
            android:id="@+id/sp_friendsList"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="20dp"
            android:layout_below="@+id/txt1Bank" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btnGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp">

        <Button
            android:id="@+id/btn4Prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="Prev" />

        <Button
            android:id="@+id/btn4Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_toEndOf="@id/btn3Prev"
            android:text="Next" />

    </LinearLayout>

</LinearLayout>